section
  h2 Sass
  p Indented syntax

  .row-fluid
    pre.span6
      code.
        @mixin table-base {
          th {
            text-align: center;
            font-weight: bold;
          }
          td, th {padding: 2px}
        }

        @mixin left($dist) {
          float: left;
          margin-left: $dist;
        }

        #data {
          @include left(10px);
          @include table-base;
        }

    pre.span6
      code.
        =table-base
          th
            text-align: center
            font-weight: bold
          td, th
            padding: 2px

        =left($dist)
          float: left
          margin-left: $dist

        #data
          +left(10px)
          +table-base

