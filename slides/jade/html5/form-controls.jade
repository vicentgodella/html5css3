section.browser-support-container
  mixin browserSupport('20+', '4+', '5+', '10+', '10.6+')
  h2 datalist
  pre
    code.
      &lt;input type="text" <b>list="mydata"</b>>
      #{'<datalist id="mydata">'}
        #{'<option label="Mr" value="Mister">'}
        #{'<option label="Mrs" value="Mistress">'}
        #{'<option label="Ms" value="Miss">'}
      #{'</datalist>'}
  #ex-datalist-input(style="background:none")
    form.form-inline
      datalist#mydata
        option(label="Mr", value="Mister")
        option(label="Mrs", value="Mistress")
        option(label="Ms", value="Miss")
      fieldset
        label.checkbox Click twice to see options
        | 
        input(type="text", list="mydata")
        | 
        button.btn(type="submit") Submit

