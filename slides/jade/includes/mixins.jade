//- Browser support panel
mixin browserSupport(chrome, ff, safari, msie, opera)
  .browser-support
    .support.chrome
    .support-version !{chrome}
    .support.ff
    .support-version !{ff}
    .support.safari
    .support-version !{safari}
    .support.msie
    .support-version !{msie}
    .support.opera
    .support-version !{opera}

//- CSS priorities component
mixin priorities(inline, ids, classes, elements)
  .priorities
    .labels
      small inline
      small IDs
      small classes
      small elements
    .levels
      .priority-level
        !{inline}
      .priority-level
        !{ids}
      .priority-level
        !{classes}
      .priority-level
        !{elements}

// Write the Google Analytics code
mixin analytics
  script
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-2309405-10']);
    _gaq.push(['_trackPageview']);
    (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

//- Header for a lab, with the appropiate ID 
mixin labHeader(title)
  //- For IDs, exclude everything after a colon ':'
  -var labId = title.match(/([^:]+)(:.+)?/)[1];
  h2(id="lab-" + labId.toLowerCase().replace(' ', '-')) !{title}
