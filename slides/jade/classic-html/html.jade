section
  h2 Some differences

  .row-fluid
    .span6
      p QUIRKS MODE
      pre
        code.
          /* traditional box model */
          .boxmodel {
             width: 10px; <b>/* total: 10px */</b>
             border: 1px solid #fff;
             padding: 2px;
          }

          /* missing units */
          .padded {
             padding: 5; <b>/* defaults to px */</b>
          }
    .span6
      p STANDARDS MODE
      pre
        code.
          /* W3C box model */
          .boxmodel {
             width: 10px; <b>/* total: 16px */</b>
             border: 1px solid #fff;
             padding: 2px;
          }

          /* missing units */
          .padded {
             padding: 5; <b>/* ignored */</b>
          }

